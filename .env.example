# LLM Provider Configuration
# Choose: openai or anthropic
LLM_PROVIDER=openai

# OpenAI API Configuration
OPENAI_API_KEY=sk-your-openai-key-here
OPENAI_MODEL=gpt-4o-mini

# Anthropic API Configuration (alternative to OpenAI)
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-haiku-20240307

# ElevenLabs TTS (optional - falls back to gTTS if not set)
ELEVENLABS_API_KEY=

# Openverse API (optional - for CC image search)
OPENVERSE_API_TOKEN=

# Whisper model for transcription (optional)
WHISPER_MODEL=base
WHISPERX_MODEL=base

# Piper TTS model (optional local TTS)
PIPER_MODEL=en_US-lessac-medium

# Storage configuration
STORAGE_ROOT=/app/storage

# Redis configuration
REDIS_URL=redis://redis:6379/0
