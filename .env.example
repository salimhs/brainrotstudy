# ============================================
# LLM Provider Configuration
# ============================================
# Choose ONE: "openai" | "anthropic" | "gemini"
LLM_PROVIDER=gemini

# OpenAI API Configuration
OPENAI_API_KEY=required_if_using_openai
OPENAI_MODEL=gpt-4o-mini

# Anthropic API Configuration 
ANTHROPIC_API_KEY=required_if_using_anthropic
ANTHROPIC_MODEL=claude-3-haiku-20240307

# Google Gemini API Configuration (Recommended - Free tier)
GOOGLE_API_KEY=required_if_using_gemini
GEMINI_MODEL=gemini-1.5-flash

# ============================================
# Voice/TTS Configuration
# ============================================
# ElevenLabs TTS (Premium - paid, higher quality, optional)
# ELEVENLABS_API_KEY=optional_paid_voice_quality

# Default: gTTS (Free, built-in)
# Default: Piper (Free, local TTS)
WHISPER_MODEL=base
WHISPERX_MODEL=base
PIPER_MODEL=en_US-lessac-medium

# ============================================
# Asset/Image APIs
# ============================================
# Pexels API (Free tier available - better than empty bg_loops)
PEXELS_API_KEY=optional_free_tier_available

# Openverse API (Optional - for CC image search, increases rate limits)
# OPENVERSE_API_TOKEN=optional_increases_rate_limits

# ============================================
# Storage & Infrastructure
# ============================================
STORAGE_ROOT=/app/storage
REDIS_URL=redis://redis:6379/0

# ============================================
# Celery/Background Jobs Configuration
# ============================================
CELERY_BROKER_CONNECTION_RETRY_ON_STARTUP=True
CELERY_TASK_ACKS_LATE=True
CELERY_WORKER_PREFETCH_MULTIPLIER=1

# ============================================
# Web App Configuration
# ============================================
API_URL=http://api:8000
NODE_ENV=production
